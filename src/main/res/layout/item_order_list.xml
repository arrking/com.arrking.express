<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:layout_alignTop="@+id/rl_order_content"
    android:id="@+id/rl_order_guest">
    <ImageView
        android:id="@+id/iv_order_guest"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_order"
        />
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/iv_order_guest"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_order_foodname"
            android:layout_marginTop="10dp"
            android:text="老丁西门鸡翅"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:textColor="@color/order_foodname"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_order_foodprice"
            android:text="单价：$88.00"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_order_foodcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:layout_marginRight="15dp"
        android:text="2份"
        />
</RelativeLayout>