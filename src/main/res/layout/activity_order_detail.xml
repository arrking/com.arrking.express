<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arrking.express.OrderDetailActivity">
    <include
        android:id="@+id/top"
        layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_below="@id/top"
        android:id="@+id/rl_order_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_orderdetail_name"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_orderdetail_user"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_orderdetail_food"
            />
    </LinearLayout>
    <Button
        android:layout_below="@id/rl_order_content"
        android:id="@+id/btn_closeorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭订单"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
